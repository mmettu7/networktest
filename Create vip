# deploy_netscaler.yml

---
- name: Deploy and Bind Netscaler Objects
  hosts: netscaler
  gather_facts: no
  vars_files:
    - netscaler_vars.yml

  tasks:
    - name: Create CSV
      delegate_to: localhost
      netscaler_cs_vserver:
        nsip: "{{ netscaler_nsip }}"
        nitro_user: "{{ netscaler_nitro_user }}"
        nitro_pass: "{{ netscaler_nitro_pass }}"
        ssl_certkey: "certkey"
        name: "{{ item.name }}"
        servicetype: "{{ item.servicetype }}"
        state: present
      loop: "{{ csv_servers }}"
      register: csv_results

    - name: Create LBV
      delegate_to: localhost
      netscaler_lb_vserver:
        nsip: "{{ netscaler_nsip }}"
        nitro_user: "{{ netscaler_nitro_user }}"
        nitro_pass: "{{ netscaler_nitro_pass }}"
        name: "{{ item.name }}"
        servicetype: "{{ item.servicetype }}"
        state: present
      loop: "{{ lbv_servers }}"
      register: lbv_results

    - name: Create Service Groups
      delegate_to: localhost
      netscaler_servicegroup:
        nsip: "{{ netscaler_nsip }}"
        nitro_user: "{{ netscaler_nitro_user }}"
        nitro_pass: "{{ netscaler_nitro_pass }}"
        servicegroupname: "{{ item.name }}"
        servicetype: "{{ item.servicetype }}"
        state: present
      loop: "{{ service_groups }}"
      register: sg_results

    - name: Bind CSV to Service Groups
      delegate_to: localhost
      netscaler_csvserver_servicegroup_binding:
        nsip: "{{ netscaler_nsip }}"
        nitro_user: "{{ netscaler_nitro_user }}"
        nitro_pass: "{{ netscaler_nitro_pass }}"
        name: "{{ item.csv_name }}"
        servicegroupname: "{{ item.sg_name }}"
        state: present
      loop: "{{ csv_results.results }}"
      loop_control:
        loop_var: item
      with_together:
        - "{{ csv_results.results }}"
        - "{{ sg_results.results }}"
      register: csv_sg_binding_results

    - name: Bind LBV to Service Groups
      delegate_to: localhost
      netscaler_lb_vserver_servicegroup_binding:
        nsip: "{{ netscaler_nsip }}"
        nitro_user: "{{ netscaler_nitro_user }}"
        nitro_pass: "{{ netscaler_nitro_pass }}"
        name: "{{ item.lbv_name }}"
        servicegroupname: "{{ item.sg_name }}"
        state: present
      loop: "{{ lbv_results.results }}"
      loop_control:
        loop_var: item
      with_together:
        - "{{ lbv_results.results }}"
        - "{{ sg_results.results }}"
      register: lbv_sg_binding_results

