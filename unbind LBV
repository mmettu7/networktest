- hosts: localhost
  tasks:
    - name: Gather facts about LBVserver bindings to CSVserver
      delegate_to: localhost
      community.network.netscaler_csvserver_lbvserver_binding_facts:
        nsip: "{{ netscaler_ip }}"
        nitro_user: "{{ nitro_user }}"
        nitro_pass: "{{ nitro_pass }}"
        lbvserver: "{{ lbvserver_name }}"
      register: result

    - name: Display the CSVserver to which the LBVserver is bound
      debug:
        msg: "The LBVserver {{ lbvserver_name }} is bound to the CSVserver {{ item.name }}"
      loop: "{{ result.ansible_facts.netscaler_csvserver_lbvserver_binding }}"
